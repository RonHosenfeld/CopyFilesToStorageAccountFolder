{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Seq", "Args": { "serverUrl": "http://localhost:5341" } }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "UISettings": {
    "Enabled": true,
    "RefreshRateMs": 100
  },
  "UploadSettings": {
    "AzureBlobStorage": {
      "ContainerUrl": "http://127.0.0.1:10000/devstoreaccount1/dr-isalus/dr-isalus-preprocessed/",
      "SasToken": "?sv=...",
      "BlobPrefix": ""
    },
    "SourceFolders": [ "/Users/ronhosenfeld/Downloads/isalus_preprocessed_prod_01122026" ],
    "ScanRecursively": true,
    "FileFilters": {
      "IncludeExtensions": [ ".pdf", ".hl7", ".json" ],
      "ExcludeExtensions": [ ".csv" ],
      "ExcludeFileNames": [ "results.json" ]
    },
    "Throttling": {
      "DelayBetweenFilesMs": 200,
      "MaxRetries": 3
    },
    "ProgressFile": "upload-progress.json",
    "ProgressDatabase": "upload-progress.db"
  }
}
